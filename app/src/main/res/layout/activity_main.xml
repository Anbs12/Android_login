<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainmario"
    tools:context=".MainActivity">

    <!-- Imagen del login-->
    <ImageView
        android:id="@+id/view2"
        android:layout_width="191dp"
        android:layout_height="159dp"
        android:layout_marginTop="100dp"


        android:background="@drawable/img_1"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#F8F4F4"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Boton ingresar-->
    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        android:text="@string/ingresar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />


    <!-- texto login-->
    <EditText
        android:id="@+id/usuarioText"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="27dp"


        android:background="@drawable/border_radius"
        android:hint="  Ingresa Usuario"
        android:inputType="text"
        android:padding="9dp"
        android:textColor="@color/black"
        android:textColorHighlight="#000000"
        android:textColorHint="#90171616"
        android:textColorLink="#070707"
        app:layout_constraintBottom_toTopOf="@+id/passText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <!-- texto password-->
    <EditText
        android:id="@+id/passText"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/border_radius"

        android:hint="  Ingrese contraseÃ±a"
        android:inputType="textPassword"
        android:padding="9dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textColorHint="#90171616"
        android:textColorLink="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btnIngresar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Boton para cerrar app-->
    <Button
        android:id="@+id/btnSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="155dp"
        android:text="Salir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIngresar" />


</androidx.constraintlayout.widget.ConstraintLayout>